/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav<?php if (!$this->getLayer()->getState()->getFilters()): ?> block-layered-nav--no-filters<?php endif; ?> visible-md visible-lg">
    <div class="block-title">
        <strong><span><?php echo $this->__('Shop By') ?></span></strong>
    </div>
    <div class="block-content toggle-content">
        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
            <p class="block-subtitle block-subtitle--filter"><?php echo $this->__('Filter') ?></p>
            <dl id="narrow-by-list" class="filter-search">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt><?php echo $this->__($_filter->getName()) ?></dt>
                    <dd><?php echo $_filter->getHtml() ?></dd>
                <?php endif; ?>
                <?php endforeach; ?>
            </dl>
        <!-- <script type="text/javascript">decorateDataList('narrow-by-list')</script> -->
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>

<div class="filter-button pull-left visible-xs visible-sm"">
    <button id="btn-filter" class="btn btn-brown">Filter</button>

    <div class="clearfix"></div>
    <div class="filter-holder">
        <p class="filter-text">Filtered by</p>
            <?php echo $this->getStateHtml() ?>

            <?php if($this->canShowOptions()): ?>

                <dl>
                    <?php $_filters = $this->getFilters() ?>
                    <?php foreach ($_filters as $_filter): ?>
                        <?php if($_filter->getItemsCount()): ?>
                            <dt><?php echo $this->__($_filter->getName()) ?></dt>
                            <dd><?php echo $_filter->getHtml() ?></dd>
                        <?php endif; ?>
                    <?php endforeach; ?>
                </dl>

            <?php endif; ?>
        <div class="row btn-holder-bawah">
            <div class="col-xs-12">
                <button id="btn-cancel-filter" class="btn btn-brown btn-filter-submit">CLOSE</button>
            </div>

        </div>
    </div>

</div>


<script type="text/javascript">

    jQuery( document ).ready(function() {

        jQuery(".filter-holder").hide();

        jQuery("#btn-filter").on('click',function(){
            jQuery(".filter-holder").toggle();

        });

        jQuery("#btn-cancel-filter").on('click', function(){
            jQuery(".filter-holder").hide();
        })

    });
</script>